{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"allowJs": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
